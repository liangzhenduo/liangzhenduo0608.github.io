<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>
  <div class="outer" align="center">    
    <div class="social-group">
      <% if(theme.github_url){ %>
      <a href="<%=theme.github_url %>" target="_blank" title="GitHub"><i class="fa-github"></i></a>
      <% } %>
      <% if(theme.google_plus_url){ %>
      <a href="<%=theme.google_plus_url %>" target="_blank" title="Google+"><i class="fa-google-plus-official"></i></a>
      <% } %>
      <% if(theme.facebook_url){ %>
      <a href="<%=theme.facebook_url %>" target="_blank" title="Facebook"><i class="fa-facebook-official"></i></a>
      <% } %>
      <% if(theme.twitter_url){ %>
      <a href="<%=theme.twitter_url %>" target="_blank" title="Twitter" ><i class="fa-twitter"></i></a>
      <% } %>
      <% if(theme.linkedin_url){ %>
      <a href="<%=theme.linkedin_url %>" target="_blank" title="LinkedIn" ><i class="fa-linkedin"></i></a>
      <% } %>
      <% if(theme.weibo_url){ %>
      <a href="<%=theme.weibo_url %>" target="_blank" title="Weibo" ><i class="fa-weibo"></i></a>
      <% } %>
      <% if(theme.mail_url){ %>
      <a href="<%=theme.mail_url %>" target="_blank" title="Email" ><i class="fa-envelope-o"></i></a>
      <% } %>
    </div>
    <div id="footer-info" class="inner" align="center">
      Powered by <a href="https://hexo.io/" target="_blank">Hexo</a> and Theme by <a href="https://github.com/hexojs/hexo-theme-landscape" target="_blank" title="landscape">landscape</a>     &copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title %> 
    </div> 

  </div>
</footer>

