<% if (site.tags.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title">Tag Cloud</h3>
    <div class="widget tagcloud">
      <!--%- tagcloud({'amount': '1024', 'orderby': 'name', 'order': '1'}) %-->
      <%- tagcloud(site.tags, {
        min_font: 12,
        max_font: 24,
        amount: 1024,
        orderby: 'count',
        color: true,
        start_color: '#007FFF',
        end_color: '#FFFFFF'
      }) %>
    </div>
  </div>
<% } %>